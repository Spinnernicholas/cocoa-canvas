# Application
NODE_ENV=development
PORT=3000

# Database
# For development with Docker (default):
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cocoa_canvas_dev

# For SQLite (lightweight alternative):
# DATABASE_URL=file:./data/cocoa_canvas.db

# Redis (for job queues and caching)
# Development (local Docker): redis://localhost:6379
# Production (Docker Compose): redis://redis:6379
REDIS_URL=redis://localhost:6379

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Automatic Setup (Phase 1)
# If ADMIN_EMAIL and ADMIN_PASSWORD are provided, the application will automatically
# create the initial admin user on first run, skipping the web-based setup wizard.
# This is useful for automated deployments (Docker, CI/CD, etc.)
#
# Example:
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=SecurePassword123!
# ADMIN_NAME=Administrator
# AUTO_SETUP_ENABLED=true
#
# All are optional. If not provided, users must complete the setup wizard via the web UI.
# ADMIN_EMAIL=
# ADMIN_PASSWORD=
# ADMIN_NAME=Admin
# AUTO_SETUP_ENABLED=true

# Security
# Generate a secure secret: openssl rand -base64 32
# NEXTAUTH_SECRET=<generated-value>

# Optional: OAuth Configuration (Phase 2+)
# GITHUB_ID=
# GITHUB_SECRET=
# GOOGLE_ID=
# GOOGLE_SECRET=

# Optional: Session configuration
SESSION_TIMEOUT=1800

# Logging
LOG_LEVEL=info

# Feature flags
ENABLE_OAUTH=false
ENABLE_MFA=false
ENABLE_LDAP=false
