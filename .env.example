# Application
NODE_ENV=development
PORT=3000

# Database (Phase 1: SQLite)
# For SQLite (default, Phase 1):
DATABASE_URL=file:./prisma/data/cocoa_canvas.db

# For PostgreSQL (uncomment to use, Phase 2+):
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/cocoa_canvas

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Security
# Generate a secure secret: openssl rand -base64 32
# NEXTAUTH_SECRET=<generated-value>

# Optional: OAuth Configuration (Phase 2+)
# GITHUB_ID=
# GITHUB_SECRET=
# GOOGLE_ID=
# GOOGLE_SECRET=

# Optional: Session configuration
SESSION_TIMEOUT=1800

# Logging
LOG_LEVEL=info

# Feature flags
ENABLE_OAUTH=false
ENABLE_MFA=false
ENABLE_LDAP=false
